<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--The primary branding color for the app-->
        <item name="colorPrimary">@color/main.red.500</item>
        <!--A darker shade of the primary color.-->
        <item name="colorPrimaryVariant">@color/main.red.700</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top of primary. -->
        <item name="colorOnPrimary">@color/surface.black</item>

        <!--the navigation bar at the bottom-->
        <item name="android:navigationBarColor">@color/main.red.700</item>

        <!--The secondary branding color for the app, usually a bright complement to the primary branding color.-->
        <item name="colorSecondary">@color/main.blue.500</item>
        <!--A darker shade of the secondary color.-->
        <item name="colorSecondaryVariant">@color/main.blue.700</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top of background. -->
        <item name="colorOnSecondary">@color/surface.black</item>


        <!--The most prominent text color.-->
        <item name="android:textColorPrimary">@color/text.main</item>
        <item name="android:textColorPrimaryInverse">@color/text.light</item>
        <!--Secondary text color-->
        <item name="android:textColorSecondary">@color/text.main</item>
        <item name="android:textColorSecondaryInverse">@color/text.light</item>


        <!--optionals-->
        <!--A color for surfaces of components, such as cards, sheets, and menus.
        <item name="android:colorBackground">@color/surface.white</item>-->

        <!--A color for surfaces of components, such as cards, sheets, and menus.
        <item name="colorSurface">@color/surface.white</item>
        <item name="colorOnSurface">@color/surface.black</item>-->


        <!--The color applied to icons/controls in their normal state.
       <item name="colorControlNormal">@color/main.blue.500</item>-->

        <!--The color applied to icons/controls in their activated state (e.g. checked).
        <item name="colorControlActivated">@color/main.blue.700</item>-->

        <!--The color applied to control highlights (e.g. ripples, list selectors).
        <item name="colorControlHighlight">@color/main.blue.900</item>-->

        <!--  <item name="android:colorButtonNormal">@color/main.red.700</item>-->
    </style>

</resources>